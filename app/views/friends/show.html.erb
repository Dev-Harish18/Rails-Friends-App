

<div class="jumbotron">
  <h1 class="display-4"><%= @friend.name%></h1>
  <p class="lead">
    Email :
    <%= @friend.email%>,
    Mobile :
    <%= @friend.phone%>,
    Twitter :
    <%= @friend.twitter%>
  </p>
  <hr class="my-4">

  <%= link_to "Edit this friend", edit_friend_path(@friend),class:"btn btn-primary" %>
  <%= link_to "Back to friends", friends_path,class:"btn btn-secondary" %>
</div>

<div>
  <%= button_to "Destroy this friend", @friend, method: :delete,class:"btn btn-danger my-4" %>
</div>
